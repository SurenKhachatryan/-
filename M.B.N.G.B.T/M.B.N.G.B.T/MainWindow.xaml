<Window x:Class="M.B.N.G.B.T.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M.B.N.G.B.T"
        mc:Ignorable="d"
        Title="Մ․Բ․Ն․Գ․Բ․Տ․"  WindowState="Maximized" MinHeight="600" MinWidth="800"  Height="780" Width="1300" Foreground="{x:Null}" BorderBrush="#FFFBFBFB" FontFamily="Segoe UI Black" >
    <Window.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,/Resources/board.jpg"/>
    </Window.Background>


    <Grid x:Name="GridMenu">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="426*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="295"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button x:Name="buttonVisualMemoryTest" Click="Button_Visual_Memory_Test" Content="Տեսողական Հիշողություն" FontSize="17"  FontFamily="Jokerman"  Foreground="White" Cursor="Hand" Grid.Row="3" HorizontalAlignment="Right" Width="265" Height="35" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0A260F" Offset="0.74"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="buttonSchulteTest" Click="Button_Schulte_Test" Content="Շուլտեի Աղյուսակ" FontSize="17"  FontFamily="Jokerman" Cursor="Hand"  Foreground="White" Grid.Row="5" HorizontalAlignment="Right" Width="265" Height="35" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0A260F" Offset="0.74"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="buttonVLMarshukTest" Click="Button_VLMarshuk_Test" Content="Վ․Լ․Մարշուկի Թեստ" FontSize="17"  FontFamily="Jokerman" Cursor="Hand" Foreground="White" Grid.Row="7" HorizontalAlignment="Right" Width="265" Height="35" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0A260F" Offset="0.74"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="buttonKrepelinTest" Click="Button_Krepelin_Test" Content="Հաշվարկ ըստ Կրեպելինի" FontSize="17"  FontFamily="Jokerman" Cursor="Hand" Foreground="White" Grid.Row="9" HorizontalAlignment="Right" Width="265" Height="35" VerticalAlignment="Top" Margin="0,1,0,0">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0A260F" Offset="0.74"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="buttonAttentivenessTest" Click="Button_Attentiveness_Test" Content="ՈՒշադրության Թեստ" FontSize="17"  FontFamily="Jokerman" Cursor="Hand" Foreground="White" Grid.Row="11" HorizontalAlignment="Right" Width="265" Height="35" VerticalAlignment="Top" Margin="0,1,0,0">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0A260F" Offset="0.74"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="buttonTestEclecticAttention" Click="Button_Test_Eclectic_Attention" Content="Ընտրության ուշադրության Թեստ" FontSize="16"  FontFamily="Jokerman" Cursor="Hand" Foreground="White" Grid.Row="13" HorizontalAlignment="Right" Width="265" Height="35" VerticalAlignment="Top" Margin="0,1,0,0">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0A260F" Offset="0.74"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>


        <Viewbox Grid.Row="1"  Margin="93,0" Grid.ColumnSpan="2">
            <TextBlock Text="   Մարդու Բարձրագույն Նյարդային Գործունեության Բաղադրիչների Թեստավորում" FontSize="23" Foreground="White"  MinHeight="22" MinWidth="610" Width="990">
                <TextBlock.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF102E16" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Background>
            </TextBlock>
        </Viewbox>
        <Frame Name="Main" Margin="0,0,0,0"  RenderTransformOrigin="0,0" Grid.RowSpan="15" Grid.ColumnSpan="2" NavigationUIVisibility="Hidden"/>

    </Grid>

</Window>
