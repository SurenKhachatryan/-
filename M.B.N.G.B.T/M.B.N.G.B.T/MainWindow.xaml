<Window x:Class="M.B.N.G.B.T.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M.B.N.G.B.T"
        mc:Ignorable="d"
        Title="Մ․Բ․Ն․Գ․Բ․Տ․" MinHeight="600" MinWidth="800"  Height="780" Width="1300" Foreground="{x:Null}" BorderBrush="#FFFBFBFB" FontFamily="Segoe UI Black" >
    <Window.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,/Resources/board.jpg"/>
    </Window.Background>


    <Grid x:Name="GridMenu">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="295"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button x:Name="button1" Click="Button_Click" Content="Տեսողական Հիշողություն" FontSize="20"  FontFamily="Jokerman"  Foreground="White" Cursor="Hand" Grid.Row="3" HorizontalAlignment="Right" Width="265" Height="35" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0A260F" Offset="0.74"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="button2" Click="Button_Click1" Content="Տեսողական Հիշողություն" FontSize="20"  FontFamily="Jokerman"  Foreground="White" Grid.Row="5" HorizontalAlignment="Right" Width="265" Height="35" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0A260F" Offset="0.74"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="button3" Click="Button_Click2" Content="Տեսողական Հիշողություն" FontSize="20"  FontFamily="Jokerman"  Foreground="White" Grid.Row="7" HorizontalAlignment="Right" Width="265" Height="35" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0A260F" Offset="0.74"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <TextBlock Text="   Մարդու Բարձրագույն Նյարդային Գործունեության Բաղադրիչների Թեստավորում" FontSize="14" Foreground="White" Grid.Row="1"  Margin="99,0,83,0" Grid.ColumnSpan="2" MinHeight="22" MinWidth="610">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF102E16" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>

        <Frame Name="Main" Margin="0,0,0,0"  RenderTransformOrigin="0,0" Grid.RowSpan="9" Grid.ColumnSpan="2" NavigationUIVisibility="Hidden"/>

    </Grid>

</Window>
