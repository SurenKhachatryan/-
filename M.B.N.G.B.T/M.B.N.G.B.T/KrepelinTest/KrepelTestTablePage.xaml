<Page x:Class="M.B.N.G.B.T.KrepelTest.KrepelinTestTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:M.B.N.G.B.T.KrepelTest"
      mc:Ignorable="d" 
      d:DesignHeight="780" d:DesignWidth="1300"
      Title="KrepelTestTablePage">
    <Page.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Doska.png"/>
    </Page.Background>
    <Grid PreviewKeyDown="Grid_PreviewKeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="241*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="393*"/>
            <ColumnDefinition Width="201*"/>
            <ColumnDefinition Width="26*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="timer1" Content="30" FontSize="70" Foreground="White"   HorizontalAlignment="Left" Margin="20,122,0,0" VerticalAlignment="Top" Height="118" Width="114" FontFamily="Sylfaen" Grid.Column="1" Grid.Row="1"/>
        <Label x:Name="timer2" Content="03" Visibility="Collapsed" FontSize="70" Foreground="#FF03FF03"   HorizontalAlignment="Left" Margin="134,122,0,0" VerticalAlignment="Top" Height="118" Width="114" FontFamily="Sylfaen" Grid.Column="1" Grid.Row="1"/>
        <Label x:Name="lebleTrue" Content="Ճիշտ - 0" FontSize="70" Foreground="White" Margin="0,7,0,0" VerticalAlignment="Top" Height="115" FontFamily="Sylfaen" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Width="374"/>

        <Label x:Name="lebleFalse" Content="Սխալ - 0" FontSize="70" Foreground="White" Margin="0,7,0,0" VerticalAlignment="Top" Height="115" FontFamily="Sylfaen" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" Width="384"/>
        <Label Content="_____" FontSize="100" Foreground="White" Margin="0,274,312,0" VerticalAlignment="Top" Height="129" FontFamily="Kristen ITC" HorizontalAlignment="Right" Width="132" Grid.Column="1" Grid.Row="1" />

        <Label x:Name="_Operator" Content="+" FontSize="100" Foreground="White" Margin="0,316,443,0" VerticalAlignment="Top" Height="125" FontFamily="Kristen ITC" HorizontalAlignment="Right" Width="69" Grid.Column="1" Grid.Row="1"/>
        <Label Content="=" FontSize="100" Foreground="White" Margin="0,316,235,0" VerticalAlignment="Top" Height="125" FontFamily="Kristen ITC" HorizontalAlignment="Right" Width="69" Grid.Column="1" Grid.Row="1"/>
        <Label Content="_____" FontSize="100" Foreground="White" Margin="0,302,65,0" VerticalAlignment="Top" Height="163" FontFamily="Kristen ITC" HorizontalAlignment="Right" Width="165" Grid.Column="1" Grid.Row="1"/>
        <Label Content="  ?" FontSize="100" Foreground="White" Margin="0,302,65,0" VerticalAlignment="Top" Height="163" FontFamily="Sylfaen" HorizontalAlignment="Right" Width="165" Grid.Column="1" Grid.Row="1"/>

        <Label x:Name="LableStage" Content="Փուլ 1/8" FontSize="70" Foreground="White" Margin="20,7,0,0" VerticalAlignment="Top" Height="115" FontFamily="Sylfaen" HorizontalAlignment="Left" Width="279" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="textBox"  BorderThickness="0" HorizontalAlignment="Right" Height="129" FontSize="100" Foreground="White"  Margin="0,306,230,0" TextWrapping="Wrap" FontFamily="Kristen ITC" Text="{x:Null}" VerticalAlignment="Top" Width="0" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" Grid.Column="1" Grid.Row="1" CaretBrush="White" PreviewTextInput="textBox_PreviewTextInput"/>
        <Label x:Name="LableCalculatingDown" Content="80" FontSize="100" Foreground="White" Margin="0,366,309,0" VerticalAlignment="Top" Height="131" FontFamily="Sylfaen" HorizontalAlignment="Right" Width="129" Grid.Column="1" Grid.Row="1"/>
        <Label x:Name="LableCalculatingUp" Content="80" FontSize="100" Foreground="White"  HorizontalAlignment="Right" Margin="0,274,309,0" VerticalAlignment="Top" Width="129" Height="129" FontFamily="Sylfaen" Grid.Column="1" Grid.Row="1"/>

        <Button x:Name="buttonClickResult" Click="button_Click_Result" Content="Ավարտել թեստը և տեսնել արդյունքները" FontSize="20"  FontFamily="Jokerman"  Foreground="White" Cursor="Hand" Margin="20,0,0,75" HorizontalAlignment="Left" Width="399" Height="36" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0A260F" Offset="0.74"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="button0" Content="0" Grid.Column="2" FontSize="45" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,106,216" Grid.Row="1" VerticalAlignment="Bottom" Width="50" Height="215" Click="Button_Click"/>
        <Button x:Name="button1" Content="1" Grid.Column="2" FontSize="45" FontWeight="Bold" Margin="0,0,272,363" Grid.Row="1" VerticalAlignment="Bottom" Height="68" HorizontalAlignment="Right" Width="50" Click="Button_Click_1"/>
        <Button x:Name="button2" Content="2" Grid.Column="2" FontSize="45" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,217,363" Grid.Row="1" VerticalAlignment="Bottom" Width="50" Height="68" Click="Button_Click_2"/>
        <Button x:Name="button3" Content="3" Grid.Column="2" FontSize="45" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,162,363" Grid.Row="1" VerticalAlignment="Bottom" Width="50" Height="68" Click="Button_Click_3"/>
        <Button x:Name="button4" Content="4" Grid.Column="2" FontSize="45" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,272,290" Grid.Row="1" Width="50" Height="68" VerticalAlignment="Bottom" Click="Button_Click_4"/>
        <Button x:Name="button5" Content="5" Grid.Column="2" FontSize="45" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,217,290" Grid.Row="1" VerticalAlignment="Bottom" Width="50" Height="68" Click="Button_Click_5"/>
        <Button x:Name="button6" Content="6" Grid.Column="2" FontSize="45" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,162,290" Grid.Row="1" VerticalAlignment="Bottom" Width="50" Height="68" Click="Button_Click_6"/>
        <Button x:Name="button7" Content="7" Grid.Column="2" FontSize="45" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,272,216" Grid.Row="1" VerticalAlignment="Bottom" Width="50" Height="68" Click="Button_Click_7"/>
        <Button x:Name="button8" Content="8" Grid.Column="2" FontSize="45" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,217,216" Grid.Row="1" VerticalAlignment="Bottom" Width="50" Height="68" Click="Button_Click_8"/>
        <Button x:Name="button9" Content="9" Grid.Column="2" FontSize="45" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,162,216" Grid.Row="1" VerticalAlignment="Bottom" Width="50" Height="68" Click="Button_Click_9"/>
    </Grid>
</Page>
