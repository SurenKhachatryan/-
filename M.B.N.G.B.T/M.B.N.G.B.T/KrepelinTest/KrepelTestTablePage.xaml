<Page x:Class="M.B.N.G.B.T.KrepelTest.KrepelinTestTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:M.B.N.G.B.T.KrepelTest"
      mc:Ignorable="d" 
      d:DesignHeight="780" d:DesignWidth="1300"
      Title="KrepelTestTablePage">
    <Page.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Doska.png"/>
    </Page.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="241*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="789*"/>
            <ColumnDefinition Width="399*"/>
            <ColumnDefinition Width="52*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Սխալ = 0" FontSize="70" Foreground="White"   HorizontalAlignment="Left" Margin="20,7,0,0" VerticalAlignment="Top" Height="115" Width="328" FontFamily="Kristen ITC" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Ճիշտ = 0" FontSize="70" Foreground="White"   HorizontalAlignment="Right" Margin="0,7,61,0" VerticalAlignment="Top" Height="115" Width="328" FontFamily="Kristen ITC" Grid.Column="2" Grid.Row="1"/>
        <Label Content="_____" FontSize="100" Foreground="White" Margin="0,220,273,0" VerticalAlignment="Top" Height="129" FontFamily="Kristen ITC" HorizontalAlignment="Right" Width="132" Grid.Column="1" Grid.Row="1" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="+" FontSize="100" Foreground="White" Margin="0,262,404,0" VerticalAlignment="Top" Height="125" FontFamily="Kristen ITC" HorizontalAlignment="Right" Width="69" Grid.Column="1" Grid.Row="1"/>
        <Label Content="=" FontSize="100" Foreground="White" Margin="0,262,196,0" VerticalAlignment="Top" Height="125" FontFamily="Kristen ITC" HorizontalAlignment="Right" Width="69" Grid.Column="1" Grid.Row="1"/>
        <Label Content="_____" FontSize="100" Foreground="White" Margin="0,248,26,0" VerticalAlignment="Top" Height="163" FontFamily="Kristen ITC" HorizontalAlignment="Right" Width="165" Grid.Column="1" Grid.Row="1"/>

        <TextBox x:Name="textBox" BorderThickness="0" HorizontalAlignment="Right" Height="129" FontSize="100" Foreground="White"  Margin="0,252,26,0" TextWrapping="Wrap" FontFamily="Kristen ITC" Text="{x:Null}" VerticalAlignment="Top" Width="165" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" Grid.Column="1" Grid.Row="1" CaretBrush="White" PreviewTextInput="textBox_PreviewTextInput"/>
        <Label x:Name="LableCalculatingDown" Content="80" FontSize="100" Foreground="White" Margin="0,312,270,0" VerticalAlignment="Top" Height="131" FontFamily="Kristen ITC" HorizontalAlignment="Right" Width="129" Grid.Column="1" Grid.Row="1"/>
        <Label x:Name="LableCalculatingUp" Content="80" FontSize="100" Foreground="White"  HorizontalAlignment="Right" Margin="0,220,270,0" VerticalAlignment="Top" Width="129" Height="129" FontFamily="Kristen ITC" Grid.Column="1" Grid.Row="1"/>

        <Button x:Name="buttonClickResult" Click="button_Click_Result" Content="Ավարտել թեստը և տեսնել արդյունքները" FontSize="20"  FontFamily="Jokerman"  Foreground="White" Cursor="Hand" Margin="20,0,0,75" HorizontalAlignment="Left" Width="399" Height="36" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0A260F" Offset="0.74"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Page>
